{
  "compilerOptions": {
    "target": "es2019",                          
    "module": "commonjs",                    
    "lib": ["es2020"],                     
    "allowJs": true,
    "outDir": "./build",                          
    "rootDir": "./",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
    "exclude": [
    "node_modules",
    "./test",
    "./build",
    "./web",
    "./plugins"
  ]
}