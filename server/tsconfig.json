{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                    
    "lib": ["es2020"],                     
    "allowJs": true,
    "outDir": "./build",                          
    "rootDir": "./",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
    "exclude": [
    "node_modules",
    "./test",
    "./build",
    "./plugins"
  ]
}